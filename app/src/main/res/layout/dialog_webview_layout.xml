<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:shapeAppearanceOverlay="@style/Theme.EyeCare202020RuleTheme.FullScreenBottomSheetShape">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtView_appBar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textAppearance="@style/Theme.EyeCare202020RuleTheme.TitleTextAppearance" />

            <com.pramod.eyecare.framework.ui.common.ObservableWebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txtView_appBar"
                android:scrollIndicators="top"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/txtView_errorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView_appBar"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="@dimen/margin_large"
                android:textAlignment="center"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/webView_progress"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>