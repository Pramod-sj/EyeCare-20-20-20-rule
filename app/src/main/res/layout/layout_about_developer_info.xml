<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/about_us_card_radius"
    app:strokeColor="@color/stroke_about_cards"
    app:strokeWidth="@dimen/about_us_card_stroke_width">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:padding="@dimen/padding_medium"
            android:text="Developer Info"
            android:textAllCaps="true"
            android:textColor="?colorPrimary" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_dev_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_medium"
            app:shapeAppearanceOverlay="@style/Theme.EyeCare202020RuleTheme.ImageViewCircularShape" />

        <TextView
            android:id="@+id/tv_design_and_develop_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="Design and developed by"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_design_and_develop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:fontFamily="@font/googlesans_medium"
            android:text="Pramod S. Jantwal"
            android:textColor="@color/textColor_highEmphasis"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/margin_medium">

            <FrameLayout
                android:id="@+id/fl_github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:background="@drawable/background_dev_social_app_circle_stroke">

                <ImageButton
                    android:layout_width="@dimen/about_us_card_social_button_size"
                    android:layout_height="@dimen/about_us_card_social_button_size"
                    android:layout_margin="@dimen/margin_small"
                    android:background="?actionBarItemBackground"
                    android:src="@drawable/ic_github"
                    app:tint="?colorOnSurface" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:background="@drawable/background_dev_social_app_circle_stroke">

                <ImageButton
                    android:layout_width="@dimen/about_us_card_social_button_size"
                    android:layout_height="@dimen/about_us_card_social_button_size"
                    android:layout_margin="@dimen/margin_small"
                    android:background="?actionBarItemBackground"
                    android:src="@drawable/ic_gmail"
                    app:tint="?colorOnSurface" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:background="@drawable/background_dev_social_app_circle_stroke">

                <ImageButton
                    android:layout_width="@dimen/about_us_card_social_button_size"
                    android:layout_height="@dimen/about_us_card_social_button_size"
                    android:layout_margin="@dimen/margin_small"
                    android:background="?actionBarItemBackground"
                    android:src="@drawable/ic_instagram"
                    app:tint="?colorOnSurface" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:background="@drawable/background_dev_social_app_circle_stroke">

                <ImageButton
                    android:layout_width="@dimen/about_us_card_social_button_size"
                    android:layout_height="@dimen/about_us_card_social_button_size"
                    android:layout_margin="@dimen/margin_small"
                    android:background="?actionBarItemBackground"
                    android:src="@drawable/ic_facebook"
                    app:tint="?colorOnSurface" />
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>