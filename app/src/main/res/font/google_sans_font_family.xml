<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- regular -->
    <font
        android:font="@font/googlesans_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/googlesans_regular"
        app:fontStyle="normal"
        app:fontWeight="400"
        tools:targetApi="o" />

    <!-- medium -->
    <font
        android:font="@font/googlesans_medium"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/googlesans_medium"
        app:fontStyle="normal"
        app:fontWeight="500"
        tools:targetApi="o" />

    <!-- italic -->
    <font
        android:font="@font/googlesans_italic"
        android:fontStyle="italic"
        android:fontWeight="400"
        app:font="@font/googlesans_italic"
        app:fontStyle="italic"
        app:fontWeight="400"
        tools:targetApi="o" />

    <!-- italic medium -->
    <font
        android:font="@font/googlesans_mediumitalic"
        android:fontStyle="italic"
        android:fontWeight="500"
        app:font="@font/googlesans_mediumitalic"
        app:fontStyle="italic"
        app:fontWeight="500"
        tools:targetApi="o" />


    <!-- bold -->
    <font
        android:font="@font/googlesans_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/googlesans_bold"
        app:fontStyle="normal"
        app:fontWeight="700"
        tools:targetApi="o" />
    <!-- italic bold -->
    <font
        android:font="@font/googlesans_bolditalic"
        android:fontStyle="italic"
        android:fontWeight="700"
        app:font="@font/googlesans_bolditalic"
        app:fontStyle="italic"
        app:fontWeight="700"
        tools:targetApi="o" />

</font-family>