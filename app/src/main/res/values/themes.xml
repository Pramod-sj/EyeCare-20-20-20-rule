<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.EyeCare202020RuleTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
        <item name="fontFamily">@font/google_sans_font_family</item>
    </style>

    <style name="Theme.EyeCare202020RuleTheme.BottomSheetDialogFragmentStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.EyeCare202020RuleTheme.FullScreenBottomSheetShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
    </style>

    <style name="Theme.EyeCare202020Rule.FabService.Start" parent="Widget.Material3.FloatingActionButton.Large.Primary" />

    <style name="Theme.EyeCare202020Rule.FabService.Stop" parent="Theme.EyeCare202020Rule.FabService.Start">
        <item name="backgroundTint">?colorError</item>
        <item name="iconTint">?colorOnError</item>
    </style>

    <style name="Theme.EyeCare202020RuleTheme.ToolbarStyle" parent="Widget.Material3.Toolbar.Surface">
        <item name="titleTextAppearance">@style/Theme.EyeCare202020RuleTheme.TitleTextAppearance
        </item>
    </style>

    <style name="Theme.EyeCare202020RuleTheme.TitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.EyeCare202020RuleTheme.ImageViewCircularShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">40dp</item>
    </style>

    <style name="CustomLayoutTitleTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/googlesans_medium</item>
        <item name="fontFamily">@font/googlesans_medium</item>
        <item name="android:textColor">@color/textColor_highEmphasis</item>
    </style>

    <style name="CustomLayoutSubtitleTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textColor_mediumEmphasis</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/googlesans_bold</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/googlesans_medium</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>


</resources>